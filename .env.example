# =============================================================================
# Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Application
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/delivery_eta
DB_HOST=localhost
DB_PORT=5432
DB_NAME=delivery_eta
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=300

# MLflow
MLFLOW_TRACKING_URI=sqlite:///models/mlflow.db
MLFLOW_EXPERIMENT_NAME=delivery-eta-prediction
MLFLOW_MODEL_NAME=delivery-eta-model

# Google Maps API (optional - for live traffic data)
GOOGLE_MAPS_API_KEY=your_api_key_here
GOOGLE_MAPS_TIMEOUT=10

# Model Configuration
MODEL_PATH=models/delivery_eta_model.joblib
MODEL_VERSION=production

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Data Generation
SYNTHETIC_DATA_ROWS=100000
RANDOM_SEED=42

# Performance Thresholds
TARGET_MAE_MINUTES=5.0
DRIFT_THRESHOLD=0.1
